---
import "../styles/global.css";
import Navbar from "./Navbar.astro";
import Footer from "./Footer.astro";
import ScrollToTop from "../lib/ScrollToTop .astro";
import Loader from "../lib/Loader.astro";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" dir="ltr">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />

        <title>{title} — bussiness hub</title>

        <!-- Favicon -->
        <link rel="icon" href="/images/Favicon_256.png" type="image/png" />

        <!-- SEO -->
        <meta
            name="description"
            content="bussiness hub provides advanced prosthetics, orthotics, and mobility solutions inspired by Egypt’s medical heritage. Precision care. Modern engineering. Human dignity."
        />
        <meta
            name="keywords"
            content="prosthetics, orthotics, mobility, medical devices, Egypt, rehabilitation, gait analysis, healthcare"
        />
        <link rel="canonical" href="https://bussiness hub.com/" />

        <!-- OpenGraph -->
        <meta property="og:title" content={`${title} — bussiness hub`} />
        <meta
            property="og:description"
            content="Modern prosthetic & orthotic solutions blending Egyptian heritage with medical technology."
        />
        <meta property="og:image" content="/images/og-default.jpg" />
        <meta property="og:type" content="website" />

        <!-- Fonts: Noto Sans + Noto Sans Arabic -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@300;400;500;600;700;800&family=Noto+Sans+Arabic:wght@300;400;500;600;700;800&display=swap"
            rel="stylesheet"
        />

        <!-- Bootstrap CSS -->
        <!-- <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
        /> -->
    </head>

    <body>
        <!-- Loader Screen -->
        <!-- <Loader /> -->
        <!-- ScrollToTop Button -->
        <ScrollToTop />

        <Navbar />
        <main class="main">
            <slot />
        </main>

        <Footer />
        <script>
            // Scroll to top on arrow click
            const arrowTop = document.querySelector(".arrow.top");
            arrowTop?.addEventListener("click", () => {
                window.scrollTo({ top: 0, behavior: "smooth" });
            });
        </script>
        <!-- Bootstrap JS (for slider, accordion, etc.) -->
        <!-- <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        ></script> -->
    </body>
</html>
