---
import "../styles/global.css";
import Navbar from "./Navbar.astro";
import Footer from "./Footer.astro";
import ScrollToTop from "../lib/ScrollToTop .astro";
import Loader from "../lib/Loader.astro";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" dir="ltr">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />

        <title>{title} — Business Hub</title>

        <!-- Favicon -->
        <link rel="icon" href="/images/Favicon_256.png" type="image/png" />

        <!-- ===================== SEO MAIN DESCRIPTION ====================== -->
        <meta
            name="description"
            content="Business Hub is a management consulting company specializing in business analysis, strategic planning, organizational development, performance improvement, quality consulting, project management, HR development, marketing analytics, and feasibility studies. مركز متخصص في الاستشارات الإدارية، وتطوير الهياكل التنظيمية، والتحليل الإداري، وتحسين العمليات، وإدارة التغيير، وإدارة الجودة، وإعداد الدراسات والأنظمة والسياسات."
        />

        <!-- ===================== SEO KEYWORDS ====================== -->
        <meta
            name="keywords"
            content="
            management consulting,
            business analysis,
            organizational development,
            strategic planning,
            performance management,
            change management,
            feasibility studies,
            HR consulting,
            PMO consulting,
            process improvement,
            business consulting Egypt,
            الاستشارات الإدارية,
            تطوير الأعمال,
            التحليل الإداري,
            الهياكل التنظيمية,
            التطوير المؤسسي,
            تحسين العمليات,
            إدارة الجودة,
            دراسات الجدوى,
            إدارة التغيير,
            تخطيط استراتيجي
        "
        />

        <!-- Canonical -->
        <link rel="canonical" href="https://business-hub.com/" />

        <!-- ===================== OpenGraph ====================== -->
        <meta property="og:title" content={`${title} — Business Hub`} />

        <meta
            property="og:description"
            content="Engaging in Management Consultancy Activities including organizational and strategic consulting, business analysis, performance development, process improvement, policy and procedure development, feasibility studies, and organizational development."
        />

        <meta property="og:image" content="/images/Favicon_256.png" />
        <meta property="og:type" content="website" />
        <meta property="og:locale" content="en_US" />
        <meta property="og:locale:alternate" content="ar_AR" />

        <!-- ===================== FONTS ====================== -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

        <link
            href="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@300;400;500;600;700;800&family=Noto+Sans+Arabic:wght@300;400;500;600;700;800&display=swap"
            rel="stylesheet"
        />
    </head>

    <body>
        <!-- Loader Screen -->
        <!-- <Loader /> -->
        <!-- ScrollToTop Button -->
        <ScrollToTop />

        <Navbar />
        <main class="main">
            <slot />
        </main>

        <Footer />
        <script>
            // Scroll to top on arrow click
            const arrowTop = document.querySelector(".arrow.top");
            arrowTop?.addEventListener("click", () => {
                window.scrollTo({ top: 0, behavior: "smooth" });
            });
        </script>
        <!-- Bootstrap JS (for slider, accordion, etc.) -->
        <!-- <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        ></script> -->
    </body>
</html>
