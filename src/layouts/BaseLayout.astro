---
import "../styles/global.css";
import Navbar from "./Navbar.astro";
import Footer from "./Footer.astro";
import ScrollToTop from "../lib/ScrollToTop .astro";
import Loader from "../lib/Loader.astro";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>{title} â€” Tabemed</title>
        <link
            rel="shortcut icon"
            href="images/Favicon_256.png"
            type="image/x-icon"
        />
        <!-- google fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <!-- <link
            href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;500;600;700&display=swap"
            rel="stylesheet"
        /> -->

        <link
            href="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@300;400;500;600;700;800&family=Noto+Sans+Arabic:wght@300;400;500;600;700;800&display=swap"
            rel="stylesheet"
        />

        <meta
            name="description"
            content="Tabemed provides professional medical services, doctors appointments, diagnostics, and healthcare solutions with modern and trusted technology."
        />
        <meta
            name="keywords"
            content="medical, healthcare, clinic, doctors, hospital, diagnostics, medical services"
        />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <link rel="canonical" href="https://your-domain.com/" />

        <!-- Bootstrap CSS -->
        <!-- <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
        /> -->
    </head>

    <body>
        <!-- Loader Screen -->
        <Loader />
        <!-- ScrollToTop Button -->
        <ScrollToTop />

        <Navbar />
        <main class="main">
            <slot />
        </main>

        <Footer />
        <script>
            // Scroll to top on arrow click
            const arrowTop = document.querySelector(".arrow.top");
            arrowTop?.addEventListener("click", () => {
                window.scrollTo({ top: 0, behavior: "smooth" });
            });
        </script>
        <!-- Bootstrap JS (for slider, accordion, etc.) -->
        <!-- <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        ></script> -->
    </body>
</html>
