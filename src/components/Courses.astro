---
import { courses } from "../data/courses"; // make sure you have this
import CourseCard from "../ui/CourseCard.astro"; // optional (you can remove)
import Section from "../ui/Section.astro";

const someCourses = courses.slice(0, 3);
---

<style>
    :root {
        --brand: #ff7415;
        --main: #105975;
        --text: #333;
        --white: #fff;
        --bg-soft: #faf7f5;
    }

    /* Main wrapper */
    .courses-wrapper {
        max-width: 1200px;
        margin: 0 auto;
        padding: 1rem;
    }

    /* Courses grid */
    .courses-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(290px, 1fr));
        gap: 2rem;
        margin-top: 2.5rem;
    }

    /* COURSE CARD */
    .course-card {
        background: #fff;
        border-radius: 18px;
        padding: 1.5rem;
        text-align: left;
        box-shadow: 0 10px 28px rgba(0, 0, 0, 0.06);
        border: 1px solid #eee;
        transition: 0.3s ease;
        display: flex;
        flex-direction: column;
        overflow: hidden;
        position: relative;
    }

    .course-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 16px 35px rgba(0, 0, 0, 0.09);
    }

    /* Course image */
    .course-img {
        width: 100%;
        height: 190px;
        object-fit: cover;
        border-radius: 12px;
        margin-bottom: 1rem;
    }

    /* Title with pencil underline */
    .course-title {
        font-size: 1.3rem;
        font-weight: 700;
        color: var(--main);
        margin-bottom: 0.5rem;
        position: relative;
        padding-bottom: 0.6rem;
    }

    .course-title::after {
        content: "";
        position: absolute;
        bottom: 0;
        left: 0;
        height: 4px;
        width: 85px;
        background-image: url("data:image/svg+xml,%3Csvg width='150' height='10' viewBox='0 0 150 10' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M3 5 C30 0, 60 10, 120 5 S 180 5, 200 5' stroke='%23ff7415' stroke-width='4' fill='none' stroke-linecap='round'/%3E%3C/svg%3E");
        background-repeat: no-repeat;
        background-size: contain;
    }

    .course-desc {
        font-size: 1rem;
        color: #555;
        line-height: 1.6;
        margin-bottom: 1rem;
        margin-top: 0.5rem;
    }

    /* Duration or price */
    .course-info {
        font-size: 1.1rem;
        font-weight: 700;
        color: var(--brand);
        margin-top: auto;
        margin-bottom: 1rem;
    }

    /* VIEW COURSE BUTTON */
    .course-btn {
        display: inline-block;
        padding: 0.8rem 1.5rem;
        background: var(--brand);
        color: var(--white);
        border-radius: 8px;
        text-decoration: none;
        font-weight: 700;
        border-bottom: 4px solid #d96412;
        border-right: 3px solid #d96412;
        transition: 0.3s;
        font-size: 0.95rem;
    }

    .course-btn:hover {
        transform: translateY(-2px);
    }

    /* ALL COURSES BUTTON */
    .courses-btn {
        display: inline-block;
        margin: 2rem auto 0 auto;
        padding: 0.9rem 2rem;
        background: var(--brand);
        color: var(--white);
        border-radius: 8px;
        text-decoration: none;
        font-weight: 700;
        border-bottom: 5px solid #d96412;
        border-right: 3px solid #d96412;
        transition: 0.3s;
        text-align: center;
    }

    .courses-btn:hover {
        transform: translateY(-3px);
    }

    .courses-btn i {
        margin-left: 8px;
    }
</style>

<Section
    title="Our Courses"
    subTitle="Professional development programs designed to elevate your skills and business impact."
>
    <div class="courses-wrapper" id="courses">
        <div class="courses-grid">
            {
                someCourses.map((c) => (
                    <div class="course-card">
                        <img src={c.image} alt={c.title} class="course-img" />

                        <h3 class="course-title">{c.title}</h3>

                        <p class="course-desc">{c.desc}</p>

                        <div class="course-info">{c.duration}</div>

                        <a href={`/courses/${c.slug}`} class="course-btn">
                            View Course â†’
                        </a>
                    </div>
                ))
            }
        </div>

        <!-- VIEW ALL COURSES -->
        <a href="/courses" class="courses-btn">
            View All Courses <i class="fa-solid fa-arrow-right-long"></i>
        </a>
    </div>
</Section>
