---
import Section from "../ui/Section.astro";
import aboutImage from "../../public/images/01.jpg";
import aboutImage2 from "../../public/images/01.jpg";
---

<style>
    .about-wrapper {
        position: relative;
        background: var(--main-bg);
        padding: 6rem 0;
        overflow: hidden;
        margin-bottom: 3rem;
    }

    /* =====================================================
       ORANGE CURVES
       ===================================================== */

    /* Section 1 curve (top-left) */
    .orange-curve {
        position: absolute;
        top: 0;
        left: 0;
        width: 55%;
        height: 100%;
        background: var(--main);
        z-index: 1;
    }
    .orange-curve.bottom-left {
        background: var(--main);
        border-bottom-right-radius: 220px;
        z-index: 1;
    }
    /* Section 2 curve (BOTTOM-LEFT ROTATED 180°) */
    .orange-curve.top-left {
        background: var(--main);
        border-top-right-radius: 220px;
        z-index: 1;
        height: 84%;
    }

    /* =====================================================
       GRID STRUCTURE
       ===================================================== */
    .content-area {
        position: relative;
        z-index: 3;
        max-width: 1300px;
        margin: 0 auto;
        padding: 2rem;
        display: grid;
        grid-template-columns: 1.1fr 0.9fr;
        align-items: center;
        gap: 3rem;
    }

    /* Section 2 custom alignment */
    .section-2-layout {
        align-items: end;
    }

    /* =====================================================
       TEXT BLOCK
       ===================================================== */
    .left-block,
    .right-block-text {
        padding-left: 2rem;
    }

    .bottom-align {
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
    }

    .main-title {
        font-size: 2.4rem;
        font-weight: 700;
        color: var(--dark);
        margin-bottom: 1.5rem;
        line-height: 1.3;
    }

    .main-text {
        color: var(--white);
        line-height: 1.8rem;
        margin-bottom: 2rem;
        font-size: 1.05rem;
        max-width: 550px;
    }

    .slogan {
        font-size: 2.3rem;
        font-weight: 600;
        line-height: 1.4;
        margin-top: 2rem;
    }

    .slogan span {
        color: var(--dark);
    }

    /* =====================================================
       IMAGE MASK
       ===================================================== */
    .image-mask {
        width: 100%;
        /* height: 360px; */
        height: 100%;
        /* border-radius: 0 0 360px 360px; */
        overflow: hidden;
        position: relative;
    }

    .image-mask img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    /* Section 2 mirrored */
    .image-mask.mirror {
        border-radius: 360px 360px 0 0;
    }
    .content-area,
    .section-2-layout {
        text-align: start;
    }
    .image-mask svg {
        width: 100%;
        height: 100%;
        display: block;
    }

    /* =====================================================
       RESPONSIVE
       ===================================================== */

    @media (max-width: 900px) {
        .about-wrapper {
            padding: 0;
        }
        .orange-curve {
            width: 100% !important;
        }

        .orange-curve.bottom-left {
            height: 55%;
        }
        .orange-curve.top-left {
            height: 55%;
        }

        .content-area,
        .section-2-layout {
            grid-template-columns: 1fr;
            align-items: center;
        }

        .left-block,
        .right-block-text {
            padding-left: 0;
        }

        /* .bottom-align {
            align-items: center;
        } */

        .image-mask,
        .image-mask.mirror {
            margin: 0 auto;
            width: 90%;
        }
    }
</style>

<!-- =======================================================================
     SECTION 1 — IMAGE RIGHT / TEXT LEFT / TOP-LEFT CURVE
     ======================================================================= -->
<Section>
    <div class="about-wrapper" id="about">
        <div class="orange-curve bottom-left"></div>

        <div class="content-area">
            <!-- TEXT LEFT -->
            <div class="left-block">
                <img
                    src="/images/BH_logo_vertical.png"
                    style="width:165px; margin-bottom:2rem;"
                />

                <h2 class="main-title">
                    Business Consulting and Professional Development
                </h2>

                <p class="main-text">
                    Delivering modern business solutions designed to help
                    companies grow with clarity, adaptability, and long-term
                    strategic strength.
                </p>

                <div class="slogan">
                    Training <span>minds.</span><br />
                    Building <span>businesses.</span>
                </div>
            </div>

            <div class="image-mask">
                <svg viewBox="0 0 600 600" xmlns="http://www.w3.org/2000/svg">
                    <defs>
                        <!-- Bars Gradient -->
                        <linearGradient id="bars" x1="0" y1="0" x2="0" y2="1">
                            <stop offset="0%" stop-color="var(--main)"></stop>
                            <stop offset="100%" stop-color="#1c6c8c"></stop>
                        </linearGradient>

                        <!-- Line Color -->
                        <linearGradient id="line" x1="0" y1="0" x2="1" y2="1">
                            <stop offset="0%" stop-color="var(--main)"></stop>
                            <stop offset="100%" stop-color="#0f3950"></stop>
                        </linearGradient>
                    </defs>

                    <!-- Growth Bars -->
                    <g transform="translate(120,250)">
                        <rect
                            x="0"
                            y="150"
                            width="55"
                            height="130"
                            rx="10"
                            fill="var(--main)"
                            opacity=".85"></rect>
                        <rect
                            x="90"
                            y="110"
                            width="55"
                            height="170"
                            rx="10"
                            fill="var(--main)"
                            opacity=".85"></rect>
                        <rect
                            x="180"
                            y="70"
                            width="55"
                            height="210"
                            rx="10"
                            fill="var(--main)"
                            opacity=".85"></rect>
                        <rect
                            x="270"
                            y="40"
                            width="55"
                            height="240"
                            rx="10"
                            fill="var(--main)"
                            opacity=".85"></rect>
                    </g>

                    <!-- Line Chart -->
                    <polyline
                        points="140,380 220,330 300,300 380,250"
                        fill="none"
                        stroke="var(--dark)"
                        stroke-width="6"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        opacity=".8"></polyline>

                    <!-- Dots -->
                    <circle cx="140" cy="380" r="10" fill="var(--dark)"
                    ></circle>
                    <circle cx="220" cy="330" r="10" fill="var(--dark)"
                    ></circle>
                    <circle cx="300" cy="300" r="10" fill="var(--dark)"
                    ></circle>
                    <circle cx="380" cy="250" r="10" fill="var(--dark)"
                    ></circle>
                </svg>
            </div>
        </div>
    </div>
</Section>

<!-- =======================================================================
     SECTION 2 — IMAGE RIGHT / TEXT LEFT (BOTTOM) / CURVE BOTTOM-LEFT ROTATED
     ======================================================================= -->
<Section>
    <div class="about-wrapper">
        <div class="orange-curve top-left"></div>

        <div class="content-area section-2-layout">
            <!-- TEXT LEFT (BOTTOM ALIGNED) -->
            <div class="right-block-text bottom-align">
                <img
                    src="/images/BH_logo_vertical.png"
                    style="width:165px; margin-bottom:2rem;"
                />

                <h2 class="main-title">
                    Strategic Planning & Organizational Development
                </h2>

                <p class="main-text">
                    Helping organizations build clarity, structure, and
                    measurable success through informed leadership and durable
                    strategic systems.
                </p>

                <div class="slogan">
                    Empowering <span>leaders.</span><br />
                    Transforming <span>organizations.</span>
                </div>
            </div>

            <!-- IMAGE RIGHT -->
            <div class="image-mask mirror">
                <svg viewBox="0 0 600 600" xmlns="http://www.w3.org/2000/svg">
                    <!-- Lines (BLACK) -->
                    <g
                        stroke="#000000"
                        stroke-width="5"
                        stroke-linecap="round"
                        opacity=".7"
                    >
                        <line x1="300" y1="150" x2="200" y2="260"></line>
                        <line x1="300" y1="150" x2="400" y2="260"></line>
                        <line x1="200" y1="260" x2="150" y2="360"></line>
                        <line x1="200" y1="260" x2="250" y2="360"></line>
                        <line x1="400" y1="260" x2="350" y2="360"></line>
                        <line x1="400" y1="260" x2="450" y2="360"></line>
                    </g>

                    <!-- Nodes (MAIN COLOR) -->
                    <g fill="var(--main)" opacity=".85">
                        <circle cx="300" cy="150" r="35"></circle>
                        <circle cx="200" cy="260" r="30"></circle>
                        <circle cx="400" cy="260" r="30"></circle>
                        <circle cx="150" cy="360" r="28"></circle>
                        <circle cx="250" cy="360" r="28"></circle>
                        <circle cx="350" cy="360" r="28"></circle>
                        <circle cx="450" cy="360" r="28"></circle>
                    </g>
                </svg>
            </div>
        </div>
    </div>
</Section>
