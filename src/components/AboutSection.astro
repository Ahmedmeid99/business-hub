---
import Section from "../ui/Section.astro";
import aboutImage from "../../public/images/01.jpg";
import aboutImage2 from "../../public/images/01.jpg";
---

<style>
    :root {
        --brand: #ff7415;
        --dark: #111;
        --text: #333;
        --bg-soft: #faf7f5;
    }

    .about-wrapper {
        position: relative;
        background: var(--main-bg);
        padding: 6rem 0;
        overflow: hidden;
        margin-bottom: 3rem;
        text-align: start;
    }

    /* =====================================================
       ORANGE CURVES
       ===================================================== */

    /* Section 1 curve (top-left) */
    .orange-curve {
        position: absolute;
        top: 0;
        left: 0;
        width: 55%;
        height: 70%;
        background: var(--brand);
        z-index: 1;
    }
    .orange-curve.bottom-left {
        bottom: 0;
        top: 0;
        left: 0;
        width: 55%;
        height: 70%;
        background: var(--brand);
        border-bottom-right-radius: 220px;
        z-index: 1;
    }
    /* Section 2 curve (BOTTOM-LEFT ROTATED 180°) */
    .orange-curve.top-left {
        bottom: 0;
        top: 0;
        left: 0;
        width: 55%;
        height: 85%;
        background: var(--brand);
        border-top-right-radius: 220px;
        z-index: 1;
    }

    /* =====================================================
       GRID STRUCTURE
       ===================================================== */
    .content-area {
        position: relative;
        z-index: 3;
        max-width: 1300px;
        margin: 0 auto;
        padding: 2rem;
        display: grid;
        grid-template-columns: 1.1fr 0.9fr;
        align-items: center;
        gap: 3rem;
    }

    /* Section 2 custom alignment */
    .section-2-layout {
        align-items: end;
    }

    /* =====================================================
       TEXT BLOCK
       ===================================================== */
    .left-block,
    .right-block-text {
        padding-left: 2rem;
    }

    .bottom-align {
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
    }

    .main-title {
        font-size: 2.4rem;
        font-weight: 700;
        color: var(--dark);
        margin-bottom: 1.5rem;
        line-height: 1.3;
    }

    .main-text {
        color: var(--text);
        line-height: 1.8rem;
        margin-bottom: 2rem;
        font-size: 1.05rem;
        max-width: 550px;
    }

    .slogan {
        font-size: 2.3rem;
        font-weight: 600;
        line-height: 1.4;
        margin-top: 2rem;
    }

    .slogan span {
        color: var(--dark);
    }

    /* =====================================================
       IMAGE MASK
       ===================================================== */
    .image-mask {
        width: 100%;
        height: 360px;
        border-radius: 0 0 360px 360px;
        overflow: hidden;
        position: relative;
    }

    .image-mask img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    /* Section 2 mirrored */
    .image-mask.mirror {
        border-radius: 360px 360px 0 0;
    }

    /* =====================================================
       RESPONSIVE
       ===================================================== */

    @media (max-width: 900px) {
        .orange-curve {
            width: 100%;
            height: 45%;
            border-bottom-right-radius: 160px;
        }

        /* .orange-curve.bottom-left {
            width: 100%;
            height: 45%;
            border-top-right-radius: 160px;
        } */

        .content-area,
        .section-2-layout {
            grid-template-columns: 1fr;
            text-align: center;
            align-items: center;
        }

        .left-block,
        .right-block-text {
            padding-left: 0;
        }

        .bottom-align {
            align-items: center;
        }

        .image-mask,
        .image-mask.mirror {
            margin: 0 auto;
            width: 90%;
        }
    }
</style>

<!-- =======================================================================
     SECTION 1 — IMAGE RIGHT / TEXT LEFT / TOP-LEFT CURVE
     ======================================================================= -->
<Section>
    <div class="about-wrapper">
        <div class="orange-curve bottom-left"></div>

        <div class="content-area">
            <!-- TEXT LEFT -->
            <div class="left-block">
                <img
                    src="/images/BH_logo_vertical.png"
                    style="width:165px; margin-bottom:2rem;"
                />

                <h2 class="main-title">
                    Business Consulting and Professional Development
                </h2>

                <p class="main-text">
                    Delivering modern business solutions designed to help
                    companies grow with clarity, adaptability, and long-term
                    strategic strength.
                </p>

                <div class="slogan">
                    Training <span>minds.</span><br />
                    Building <span>businesses.</span>
                </div>
            </div>

            <!-- IMAGE RIGHT -->
            <div class="image-mask">
                <img src={aboutImage.src} alt="About" />
            </div>
        </div>
    </div>
</Section>

<!-- =======================================================================
     SECTION 2 — IMAGE RIGHT / TEXT LEFT (BOTTOM) / CURVE BOTTOM-LEFT ROTATED
     ======================================================================= -->
<Section>
    <div class="about-wrapper">
        <div class="orange-curve top-left"></div>

        <div class="content-area section-2-layout">
            <!-- TEXT LEFT (BOTTOM ALIGNED) -->
            <div class="right-block-text bottom-align">
                <img
                    src="/images/BH_logo_vertical.png"
                    style="width:165px; margin-bottom:2rem;"
                />

                <h2 class="main-title">
                    Strategic Planning & Organizational Development
                </h2>

                <p class="main-text">
                    Helping organizations build clarity, structure, and
                    measurable success through informed leadership and durable
                    strategic systems.
                </p>

                <div class="slogan">
                    Empowering <span>leaders.</span><br />
                    Transforming <span>organizations.</span>
                </div>
            </div>

            <!-- IMAGE RIGHT -->
            <div class="image-mask mirror section-2-image">
                <img src={aboutImage2.src} alt="About Section 2" />
            </div>
        </div>
    </div>
</Section>
