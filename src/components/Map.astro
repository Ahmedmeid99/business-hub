<style>
    .map-div {
        border-top: 3px solid var(--main);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        /* border-radius: 12px; */
        overflow: hidden;
    }
    .map-div iframe {
        border: none;
        width: 100%;
        height: 100%;
        min-height: 400px;
        display: block;
    }
    @media (max-width: 687px) {
        iframe {
            min-height: 500px;
        }
    }
</style>

<div class="col-xs-12 pd-0 map-div">
    <iframe
        src="https://www.google.com/maps?q=30.02157,31.69048&z=18&output=embed"
        width="100%"
        height="420"
        style="border:0; box-shadow:0 6px 20px rgba(0,0,0,0.15);"
        allowfullscreen=""
        loading="lazy"
    >
    </iframe>
</div>
