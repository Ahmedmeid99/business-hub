---
import BaseLayout from "../layouts/BaseLayout.astro";
import Section from "../ui/Section.astro";
import { products } from "../data/products";

export async function getStaticPaths() {
    return products.map((product) => ({
        params: { slug: product.slug },
        props: { product },
    }));
}

const { product } = Astro.props;
---

<BaseLayout title={product.title}>
    <Section title={product.title}>
        <style>
            /* ----------------- BREADCRUMBS ----------------- */
            .breadcrumbs {
                width: 80%;
                margin: auto;
                font-size: 0.95rem;
                margin-top: 3rem;
                margin-bottom: 1.5rem;
                color: var(--text-light);
                font-weight: 500;
            }

            .breadcrumbs a {
                color: var(--main);
                text-decoration: none;
                font-weight: 600;
            }

            .breadcrumbs a:hover {
                text-decoration: underline;
            }

            .breadcrumbs span {
                margin: 0 6px;
                color: var(--text-light);
            }

            /* ----------------- PRODUCT LAYOUT ----------------- */
            .product-wrapper {
                display: flex;
                align-items: flex-start;
                gap: 2rem;
                max-width: 1100px;
                margin: 0 auto;
                padding: 2rem 3rem;
            }

            .product-image {
                flex: 1;
                max-width: 500px;
                height: 400px;
                border-radius: 16px;
                overflow: hidden;
                box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
            }

            .product-image img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                border-radius: 16px;
            }

            .product-info {
                flex: 1;
                font-family: var(--font-main);
            }

            .product-desc {
                font-size: 1.1rem;
                line-height: 1.7;
                color: var(--text-light);
                margin-bottom: 1.5rem;
            }

            .product-details {
                background: var(--main-bg);
                /* padding: 1rem 1.2rem; */
                /* border-left: 4px solid var(--main); */
                border-radius: 12px;
                margin-bottom: 1.8rem;
                color: var(--text);
                font-size: 1.05rem;
                line-height: 1.7;
            }

            .product-price {
                font-size: 1.6rem;
                font-weight: 800;
                color: var(--main);
                margin-bottom: 1.5rem;
            }

            .btn-buy {
                display: inline-block;
                padding: 1rem 2rem;
                background: var(--main);
                color: var(--white);
                border-radius: 10px;
                font-size: 1.1rem;
                font-weight: 700;
                text-decoration: none;
                transition: 0.2s;
                border-bottom: 5px solid var(--main-hover);
                border-right: 3px solid var(--main-hover);
            }

            .btn-buy span {
                font-weight: 700;
                font-size: 1rem;
            }
            .btn-buy i {
                font-size: 12px;
                margin-left: 8px;
                transition: 0.5s;
            }

            .btn-buy:hover i {
                transform: translateX(7px);
                transition: 0.3s;
            }

            @media (max-width: 900px) {
                .product-wrapper {
                    flex-direction: column;
                    text-align: center;
                    padding: 2rem 0rem;
                }
                .product-image {
                    max-width: 100%;
                }
                .breadcrumbs {
                    text-align: center;
                }
            }
        </style>

        <!-- ðŸ§­ BREADCRUMBS -->
        <div class="breadcrumbs">
            <a href="/">Home</a>
            <span>â€º</span>
            <a href="/products">Products</a>
            <span>â€º</span>
            <span>{product.title}</span>
        </div>

        <div class="product-wrapper">
            <!-- PRODUCT IMAGE -->
            <div class="product-image">
                <img src={product.image} alt={product.title} />
            </div>

            <!-- PRODUCT INFO -->
            <div class="product-info">
                <p class="product-desc">{product.desc}</p>

                <div class="product-details">
                    {product.details}
                </div>

                <div class="product-price">{product.price}</div>

                <a href="/contactus" class="btn-buy"
                    ><span>Contact to Order</span>
                    <i class="fa-solid fa-arrow-right-long"></i></a
                >
            </div>
        </div>
    </Section>
</BaseLayout>
