---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Section from "../../ui/Section.astro";
import { courses } from "../../data/courses";

export async function getStaticPaths() {
    return courses.map((course) => ({
        params: { slug: course.slug },
        props: { course },
    }));
}

const { course } = Astro.props;
---

<BaseLayout title={course.title}>
    <Section title={course.title}>
        <style>
            /* ----------------- BREADCRUMBS ----------------- */
            .breadcrumbs {
                width: 85%;
                margin: auto;
                font-size: 0.95rem;
                margin-top: 3rem;
                margin-bottom: 1.5rem;
                color: var(--text-light);
                text-align: start;
                font-weight: 500;
            }

            .breadcrumbs a {
                color: var(--main);
                text-decoration: none;
                font-weight: 600;
            }

            .breadcrumbs a:hover {
                text-decoration: underline;
            }

            .breadcrumbs span {
                margin: 0 6px;
                color: var(--text-light);
            }

            /* ----------------- COURSE LAYOUT ----------------- */
            .course-wrapper {
                display: flex;
                align-items: flex-start;
                gap: 2rem;
                max-width: 1100px;
                margin: 0 auto;
                padding: 2rem 3rem;
            }

            .course-image {
                flex: 1;
                max-width: 500px;
                height: 400px;
                border-radius: 16px;
                overflow: hidden;
                box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
            }

            .course-image img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                border-radius: 16px;
            }

            .course-info {
                flex: 1;
                font-family: var(--font-main);
                text-align: start;
            }

            .course-desc {
                font-size: 1.15rem;
                line-height: 1.7;
                color: var(--text-light);
                margin-bottom: 1.5rem;
            }

            .course-details {
                background: var(--main-bg);
                border-radius: 12px;
                padding: 1rem 1.2rem;
                margin-bottom: 1.8rem;
                color: var(--text);
                font-size: 1.05rem;
                line-height: 1.7;
            }

            .course-duration {
                font-size: 1.3rem;
                font-weight: 700;
                color: var(--main);
                margin-bottom: 1.5rem;
            }

            .btn-enroll {
                display: inline-block;
                padding: 1rem 2rem;
                background: var(--main);
                color: var(--white);
                border-radius: 10px;
                font-size: 1.1rem;
                font-weight: 700;
                text-decoration: none;
                transition: 0.2s;
                border-bottom: 5px solid var(--main-hover);
                border-right: 3px solid var(--main-hover);
            }

            .btn-enroll span {
                font-weight: 700;
                font-size: 1rem;
            }
            .btn-enroll i {
                font-size: 12px;
                margin-left: 8px;
                transition: 0.5s;
            }

            .btn-enroll:hover i {
                transform: translateX(7px);
                transition: 0.3s;
            }

            @media (max-width: 900px) {
                .course-wrapper {
                    flex-direction: column;
                    text-align: center;
                    padding: 2rem 0rem;
                }
                .course-image {
                    max-width: 100%;
                }
                .breadcrumbs {
                    text-align: center;
                }
            }
        </style>

        <!-- ðŸ§­ BREADCRUMBS -->
        <div class="breadcrumbs">
            <a href="/">Home</a>
            <span>â€º</span>
            <a href="/courses">Courses</a>
            <span>â€º</span>
            <span>{course.title}</span>
        </div>

        <div class="course-wrapper">
            <!-- COURSE IMAGE -->
            <div class="course-image">
                <img src={course.image} alt={course.title} />
            </div>

            <!-- COURSE INFO -->
            <div class="course-info">
                <p class="course-desc">{course.desc}</p>

                <div class="course-details">
                    <strong>Duration:</strong>
                    {course.duration}
                </div>

                <a href="/contactus" class="btn-enroll">
                    <span>Enroll Now</span>
                    <i class="fa-solid fa-arrow-right-long"></i>
                </a>
            </div>
        </div>
    </Section>
</BaseLayout>
