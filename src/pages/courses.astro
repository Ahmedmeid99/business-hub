---
import BaseLayout from "../layouts/BaseLayout.astro";
import Section from "../ui/Section.astro";
import "../styles/global.css";
import { courses } from "../data/courses";
import CourseCard2 from "../ui/cards/CourseCard2.astro";
---

<style>
    :root {
        --brand: #ff7415;
        /* --main: #105975; */
        --text: #333;
        --white: #fff;
    }

    .courses-wrapper {
        max-width: 1200px;
        margin: 0 auto;
        padding: 1rem;
        text-align: center;
    }

    /* GRID */
    .courses-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(290px, 1fr));
        gap: 2rem;
        margin-top: 3rem;
    }
</style>

<BaseLayout title="Our Courses">
    <Section
        title="Our Courses"
        subTitle="Professional development programs designed to elevate your skills and business impact."
    >
        <div class="courses-wrapper">
            <div class="courses-grid">
                {
                    courses.map((c) => (
                        <CourseCard2
                            title={c.title}
                            desc={c.desc}
                            duration={c.duration}
                            image={c.image}
                            slug={c.slug}
                        />
                    ))
                }
            </div>
        </div>
    </Section>
</BaseLayout>
