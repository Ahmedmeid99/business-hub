---
import BaseLayout from "../layouts/BaseLayout.astro";
import Section from "../ui/Section.astro";
import "../styles/global.css";
import { courses } from "../data/courses";
import CourseCard2 from "../ui/cards/CourseCard2.astro";
---

<style>
    .courses-wrapper {
        max-width: 1250px;
        margin: 0 auto;
        /* padding: 2rem 1rem; */
    }

    /* GRID updated to match color-block design */
    .courses-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 3rem;
        justify-content: center;
        align-items: start;
        margin-top: 3.5rem;
    }

    /* Makes the course card feel like a gallery item */
    .course-item {
        display: flex;
        justify-content: center;
    }

    /* Optional â€” soft page background */
    .courses-section-bg {
        /* background: #fafafa; */
        padding: 4rem 0;
        border-radius: 24px;
    }
</style>

<BaseLayout title="Our Courses">
    <div class="courses-section-bg">
        <Section
            title="Our Courses"
            subTitle="Professional development programs designed to elevate your skills and business impact."
        >
            <div class="courses-wrapper">
                <div class="courses-grid">
                    {
                        courses.map((c) => (
                            <div class="course-item">
                                <CourseCard2
                                    title={c.title}
                                    desc={c.desc}
                                    duration={c.duration}
                                    image={c.image}
                                    slug={c.slug}
                                    color={c.color}
                                />
                            </div>
                        ))
                    }
                </div>
            </div>
        </Section>
    </div>
</BaseLayout>
