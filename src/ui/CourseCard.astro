---
const { title, desc, duration, image, slug } = Astro.props;
---

<style>
    :root {
        --brand: #ff7415;
        /* --main: #105975; */
        --text: #333;
        --white: #fff;
    }

    .course-card {
        background: #fff;
        border-radius: 18px;
        padding: 1.5rem;
        text-align: left;
        box-shadow: 0 10px 28px rgba(0, 0, 0, 0.06);
        border: 1px solid #eee;
        transition: 0.3s ease;
        display: flex;
        flex-direction: column;
        overflow: hidden;
        position: relative;
    }

    .course-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 16px 35px rgba(0, 0, 0, 0.1);
    }

    /* Course image */
    .course-img {
        width: 100%;
        height: 190px;
        object-fit: cover;
        border-radius: 12px;
        margin-bottom: 1rem;
    }

    /* Title */
    .course-title {
        font-size: 1.3rem;
        font-weight: 700;
        color: var(--main);
        margin-bottom: 0.5rem;
        position: relative;
        padding-bottom: 0.6rem;
    }

    /* Pencil line underline */
    .course-title::after {
        content: "";
        position: absolute;
        bottom: 0;
        left: 0;
        height: 4px;
        width: 90px;
        background-image: url("data:image/svg+xml,%3Csvg width='150' height='10' viewBox='0 0 150 10' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M3 5 C30 0, 60 10, 120 5 S 180 5, 200 5' stroke='%23ff7415' stroke-width='4' fill='none' stroke-linecap='round'/%3E%3C/svg%3E");
        background-repeat: no-repeat;
        background-size: contain;
    }

    /* Description */
    .course-desc {
        font-size: 1rem;
        color: #555;
        line-height: 1.6;
        margin-bottom: 1rem;
        margin-top: 0.5rem;
    }

    /* Duration / Info */
    .course-info {
        font-size: 1.1rem;
        font-weight: 700;
        color: var(--brand);
        margin-top: auto;
        margin-bottom: 1rem;
    }

    /* Details Button */
    .course-btn {
        display: inline-block;
        padding: 0.8rem 1.5rem;
        background: var(--brand);
        color: var(--white);
        border-radius: 8px;
        text-decoration: none;
        font-weight: 700;
        border-bottom: 4px solid #d96412;
        border-right: 3px solid #d96412;
        transition: 0.3s;
        font-size: 0.95rem;
        text-align: center;
        width: fit-content;
    }

    .course-btn:hover {
        transform: translateY(-2px);
    }
</style>

<div class="course-card">
    <img src={image} alt={title} class="course-img" />

    <h3 class="course-title">{title}</h3>

    <p class="course-desc">{desc}</p>

    <div class="course-info">{duration}</div>

    <a href={`/courses/${slug}`} class="course-btn"> View Course â†’ </a>
</div>
