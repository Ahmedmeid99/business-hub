---
import { Image } from "astro:assets";
import Section from "./Section.astro";

const { title = "Our Values", subTitle = "", values = [] } = Astro.props;
---

<style>
    .values-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 2rem;
        margin-top: 3rem;
        padding: 1rem 0;
    }

    .value-card {
        position: relative;
        border-radius: 22px;
        overflow: hidden;
        cursor: pointer;
        transition: transform 0.3s ease;
        border: 1px solid #eee;
        background: #fff;
        width: fit-content;
    }

    .value-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 35px rgba(0,0,0,0.08);
    }

    /* IMAGE WRAPPER */
    .value-img-wrapper {
        width: 100%;
        height: 220px;
        overflow: hidden;
        border-top-left-radius: 22px;
        border-top-right-radius: 22px;
        position: relative;
    }

    .value-img-wrapper img {
        width: auto;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .value-card:hover .value-img-wrapper img {
        transform: scale(1.08);
    }

    /* OVERLAY (appears on hover) */
    .value-overlay {
        position: absolute;
        left: 0;
        bottom: -100%;
        width: 100%;
        /* height: 65%; */
        background: linear-gradient(
            to top,
            rgba(0,0,0,0.65),
            rgba(0,0,0,0.1)
        );
        backdrop-filter: blur(2px);
        color: #fff;
        padding: 1.8rem 1rem 1rem;
        display: flex;
        align-items: flex-end;
        justify-content: center;
        font-size: 1.3rem;
        font-weight: 700;
        border-bottom-left-radius: 22px;
        border-bottom-right-radius: 22px;
        transition: bottom 0.45s ease;
        text-align: center;
    }

    .value-card:hover .value-overlay {
        bottom: 0;
    }

    /* TEXT BELOW IMAGE */
    .value-desc {
        padding: 1rem;
        font-size: 1rem;
        color: #555;
        line-height: 1.6;
    }
</style>

<Section title={title} subTitle={subTitle}>
    <div class="values-grid">
        {values.map((v:any) => (
            <div class="value-card">
                
                <!-- Image & hover overlay -->
                <div class="value-img-wrapper">
                    <Image src={v.icon} alt={v.label} />
                    <div class="value-overlay">
                        {v.label}
                    </div>
                </div>

                <!-- Description -->
                {/* <div class="value-desc">
                    {v.desc}
                </div> */}

            </div>
        ))}
    </div>
</Section>
