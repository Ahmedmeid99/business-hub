---
import { Image } from "astro:assets";
import Section from "./Section.astro";

const { title = "Our Values", subTitle = "", values = [] } = Astro.props;
---

<style>
    .values-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: 2rem;
        margin-top: 3rem;
    }

    .value-card {
        position: relative;
        border-radius: 22px;
        overflow: hidden;
        height: 300px;
        cursor: pointer;
        background: #000;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 1px solid var(--main);
    }

    .value-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 12px 28px rgba(0,0,0,0.18);
    }

    /* Background Image Layer */
    .value-bg img {
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: 1;
        transition: transform 0.5s ease;
    }

    .value-card:hover .value-bg img {
        transform: scale(1.1);
    }

    /* Overlay */
    .value-overlay {
        position: absolute;
        inset: 0;
        z-index: 2;
        background: linear-gradient(
            to bottom,
            rgba(0,0,0,0.15),
            rgba(0,0,0,0.55)
        );
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        padding: 2rem;
        color: white;
        text-align: left;
    }

    .value-title {
        font-size: 1.4rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .value-desc {
        font-size: 0.95rem;
        line-height: 1.5;
        opacity: 0.95;
    }
</style>

<Section title={title} subTitle={subTitle}>
    <div class="values-grid">
        {values.map((v:any) => (
            <div class="value-card">
                
                <!-- Background Image -->
                <div class="value-bg">
                    <Image src={v.icon} alt={v.label} />
                </div>

                <!-- Overlay Content -->
                <div class="value-overlay">
                    <div class="value-title">{v.label}</div>
                    <div class="value-desc">{v.desc}</div>
                </div>

            </div>
        ))}
    </div>
</Section>
