---
const { iconClass } = Astro.props;
---

<style>
    .card {
        background: #fff;
        border-radius: 16px;
        padding: 1.8rem 1.4rem;
        text-align: center;
        border: 1px solid var(--main);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.05);

        /* Fade-up animation */
        /* opacity: 0; */
        /* transform: translateY(25px); */
        /* animation: fadeUp 0.8s ease forwards; */
        transition: var(--transition);
    }
    .card:hover {
        transform: scale(0.97);
    }

    @keyframes fadeUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Slight delays for staggered cards */
    .card:nth-child(1) {
        animation-delay: 0.05s;
    }
    .card:nth-child(2) {
        animation-delay: 0.18s;
    }
    .card:nth-child(3) {
        animation-delay: 0.32s;
    }
    .card:nth-child(4) {
        animation-delay: 0.45s;
    }
    .card:nth-child(5) {
        animation-delay: 0.58s;
    }
    .card:nth-child(6) {
        animation-delay: 0.7s;
    }

    /* Icon block */
    .icon-wrapper {
        margin-bottom: 0.9rem;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
    }

    .icon i {
        font-size: 2.2rem;
        color: var(--main, #105975);
        transition: 0.3s ease;
        display: inline-block;
    }

    /* Title */
    .card h3 {
        font-size: 1.25rem;
        font-weight: 700;
        color: #105975;
        margin-bottom: 0.5rem;
        line-height: 1.3;
    }

    /* Description */
    .card p {
        font-size: 0.96rem;
        color: #555;
        line-height: 1.55;
        margin: 0 auto;
        max-width: 95%;
    }
</style>

<div class="card">
    {
        iconClass && (
            <div class="icon-wrapper">
                <div class="icon">
                    <i class={iconClass} />
                </div>
            </div>
        )
    }

    <slot />
</div>
