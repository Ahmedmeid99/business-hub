---
const { iconClass } = Astro.props;
---

<style>
    .card {
        background: #fff;
        box-shadow: 0 0px 12px rgba(0, 0, 0, 0.08);
        padding: 2rem 1.5rem;
        text-align: center;
        transition:
            transform 0.3s ease,
            box-shadow 0.3s ease,
            opacity 1s ease;
        opacity: 0;
        transform: translateY(30px);
        animation: fadeUp 0.8s ease forwards;
    }
    @keyframes fadeUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .card:nth-child(1) {
        animation-delay: 0.1s;
    }
    .card:nth-child(2) {
        animation-delay: 0.3s;
    }
    .card:nth-child(3) {
        animation-delay: 0.5s;
    }

    .card h3 {
        font-size: 1.5rem;
        color: #105975;
        margin: 1rem 0 0.75rem 0;
    }

    .card p {
        color: #555;
        font-size: 1rem;
        line-height: 1.6;
    }

    /* Font Awesome Icon at top */
    .card .icon {
        font-size: 2.5rem;
        color: #80d1ea;
        transition:
            color 0.3s ease,
            transform 0.3s ease;
        margin-bottom: 0.5rem;
    }

    .icon i {
        font-size: 2.8rem;
        color: var(--main, #80d1ea);
        margin-bottom: 1rem;
        display: inline-block;
        transition:
            color 0.3s ease,
            transform 0.3s ease;
        position: relative;
    }
    .icon i::after {
        content: "";
        position: absolute;
        bottom: -0.5rem;
        left: -0.5rem;
        width: 30px;
        height: 30px;
        border-radius: 100px;
        background-color: var(--accent);
        z-index: -1;
    }
</style>
<div class="card">
    {
        iconClass && (
            <div class="icon">
                <i class={iconClass} />
            </div>
        )
    }
    <slot />
</div>
