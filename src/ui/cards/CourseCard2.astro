---
const { title, desc, duration, image, slug, color = "#ff7415" } = Astro.props;
---

<style>
    .course-card {
        position: relative;
        overflow: hidden;
        cursor: pointer;
        border-radius: 20px;
        background: #ff741596;
        padding: 1rem;
        transition: 0.35s ease;
        display: block;
        width: 100%;
        max-width: 380px;
        margin: 0 auto;
    }

    .course-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 16px 38px rgba(0, 0, 0, 0.15);
    }

    /* IMAGE WRAPPER */
    .img-block {
        background: var(--block-color);
        padding: 1rem;
        border-radius: 12px;
        overflow: hidden;
        height: 240px;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
    }

    .img-block img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        opacity: 0.9;
        filter: grayscale(100%) contrast(1.1);
        transition: 0.35s ease;
    }

    .course-card:hover img {
        opacity: 1;
        transform: scale(1.06);
    }

    /* COLOR TINT OVER IMAGE */
    .img-block::after {
        content: "";
        position: absolute;
        inset: 0;
        background: var(--block-color);
        mix-blend-mode: multiply;
        opacity: 0.8;
    }

    /* TITLE (White Logo Style) */
    .course-title {
        position: absolute;
        z-index: 10;
        color: white;
        font-weight: 900;
        font-size: 1.5rem;
        text-align: center;
        pointer-events: none;
        letter-spacing: -1px;
        text-shadow: 1px 1px 7px #1111117b;
    }

    /* Centered title */
    .course-title-wrapper {
        position: absolute;
        inset: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 5;
    }
</style>

<div class="course-card" style={`--block-color: ${color}`}>
    <a href={`courses/${slug}`}>
        <!-- Outer block contains colored background + tinted image -->
        <div class="img-block">
            <!-- Background Image -->
            <img src={image} alt={title} />

            <!-- Centered Title -->
            <div class="course-title-wrapper">
                <h3 class="course-title">{title}</h3>
            </div>
        </div>
    </a>
</div>
