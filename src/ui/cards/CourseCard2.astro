---
const { title, desc, duration, image, slug, color = "#ff7415" } = Astro.props;
---

<style>
    .course-card {
        position: relative;
        overflow: hidden;
        border-radius: 18px;
        cursor: pointer;
        transition: 0.35s ease;
        background: #fff;
        display: flex;
        flex-direction: column;
        box-shadow: 0 10px 28px rgba(0, 0, 0, 0.06);
        border: 1px solid var(--main);
        /* border: 1px solid #eee; */
    }

    .course-card:hover {
        /* transform: translateY(-8px); */
        box-shadow: 0 18px 35px rgba(0, 0, 0, 0.12);
    }

    /* IMAGE */
    .course-img-wrapper {
        position: relative;
        height: 210px;
        overflow: hidden;
    }

    .course-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.4s ease;
    }

    .course-card:hover .course-img {
        transform: scale(1.1);
    }

    /* OVERLAY */
    .overlay {
        position: absolute;
        inset: 0;
        /* background: linear-gradient(
            to top,
            rgba(0, 0, 0, 0.55),
            rgba(0, 0, 0, 0)
        ); */

        background: linear-gradient(
            to top,
            var(--hover-color),
            rgba(0, 0, 0, 0.25)
        );
        opacity: 1;
        transition: background 0.4s ease;
    }

    .course-card:hover .overlay {
        background: linear-gradient(
            to top,
            var(--hover-color),
            rgba(0, 0, 0, 0.25)
        );
        opacity: 1;
    }

    /* TITLE OVER IMAGE */
    .course-title {
        position: absolute;
        bottom: 1rem;
        left: 1rem;
        color: #fff;
        font-size: 1.35rem;
        font-weight: 800;
        z-index: 2;
        transition:
            transform 0.4s ease,
            letter-spacing 0.3s ease;
    }

    .course-card:hover .course-title {
        /* transform: translateY(-4px); */
        /* letter-spacing: 0.5px; */
    }

    /* CONTENT BELOW IMAGE */
    .course-content {
        padding: 1.4rem;
        display: flex;
        flex-direction: column;
    }

    .course-desc {
        color: #555;
        font-size: 1rem;
        line-height: 1.6;
        margin-bottom: 1rem;
    }

    .course-info {
        font-size: 1.05rem;
        font-weight: 700;
        color: var(--hover-color);
        margin-bottom: 1rem;
    }

    /* BUTTON */
    .course-btn {
        display: inline-block;
        padding: 0.8rem 1.5rem;
        background: var(--hover-color);
        color: #fff;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 700;
        font-size: 0.95rem;
        width: fit-content;
        transition: 0.3s ease;
        border-bottom: 4px solid rgba(0, 0, 0, 0.2);
        border-right: 3px solid rgba(0, 0, 0, 0.2);
    }

    .course-btn:hover {
        /* transform: translateY(-3px); */
    }
</style>

<div class="course-card" style={`--hover-color: ${color}`}>
    <a href={`courses/${slug}`}>
        <div class="course-img-wrapper">
            <img src={image} alt={title} class="course-img" />
            <div class="overlay"></div>
            <h3 class="course-title">{title}</h3>
        </div>
    </a>

