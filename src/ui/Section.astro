---
const { title, subTitle } = Astro.props;
---

<style>
    :root {
        --brand: #ff7415;
        --dark: #111;
        --text-light: #666;
    }

    .section {
        margin: 100px auto;
        width: 88%;
        max-width: 1200px;
        text-align: center;
    }

    .section-title {
        font-size: 2.4rem;
        font-weight: 800;
        color: var(--dark);
        margin-bottom: 0.25rem;
        letter-spacing: -0.3px;
    }

    .section-subtitle {
        font-size: 1.05rem;
        color: var(--text-light);
        max-width: 750px;
        margin: 0 auto 50px auto;
        line-height: 1.7;
    }

    /* ========================= COLORED PENCIL LINE ========================= */
    .section-line-wrapper {
        display: flex;
        justify-content: center;
        margin-bottom: 1rem;
    }

    .section-line {
        width: 180px;
        height: 14px; /* taller for textured stroke */
        background-repeat: no-repeat;
        background-size: 100% 100%;
        background-position: center;

        /* Irregular hand-drawn colored-pencil SVG stroke */
        background-image: url("data:image/svg+xml,%3Csvg width='300' height='20' viewBox='0 0 300 20' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M5 10 Q 40 2, 80 10 T 160 10 T 240 10 T 295 10' stroke='%23ff7415' stroke-width='6' fill='none' stroke-linecap='round' stroke-linejoin='round'/%3E%3Cpath d='M5 10 Q 40 4, 80 12 T 160 8 T 240 13 T 295 9' stroke='%23ff7415' stroke-width='2' fill='none' opacity='0.4'/%3E%3C/svg%3E");
    }

    @media (max-width: 600px) {
        .section-line {
            width: 130px;
        }
    }
</style>

<section class="section">
    {title && <h3 class="section-title">{title}</h3>}

    {
        title && (
            <div class="section-line-wrapper">
                <div class="section-line" />
            </div>
        )
    }

    {subTitle && <p class="section-subtitle">{subTitle}</p>}

    <slot />
</section>
