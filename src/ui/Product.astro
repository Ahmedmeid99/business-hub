---
const { title, desc, price, image, slug } = Astro.props;
---

<style>
    /* Card style */
    a {
        text-decoration: none;
    }
    .product-card {
        background: var(--white);
        padding: 1.2rem;
        border-radius: 16px;
        box-shadow: 0 6px 22px rgba(0, 0, 0, 0.08);
        transition: 0.3s ease;
        cursor: pointer;
    }

    .product-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 12px 28px rgba(0, 0, 0, 0.12);
    }

    .product-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-radius: 14px;
        margin-bottom: 1rem;
    }

    .product-title {
        font-size: 1.3rem;
        font-weight: 700;
        color: var(--text);
        margin-bottom: 0.4rem;
    }

    .product-desc {
        font-size: 1rem;
        color: var(--text-light);
        margin-bottom: 0.8rem;
        line-height: 1.5rem;
    }

    .product-price {
        background: rgba(129, 209, 231, 0.15);
        color: var(--main);
        padding: 10px 16px;
        border-radius: 12px;
        font-size: 1.2rem;
        font-weight: 700;
        display: inline-block;
    }
</style>

<a href={`/${slug}`}>
    <div class="product-card">
        <img src={image} class="product-image" alt={title} loading="lazy" />
        <div class="product-title">{title}</div>
        <div class="product-desc">{desc}</div>
        <div class="product-price">{price}</div>
    </div>
</a>
